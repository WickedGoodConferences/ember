            %a.speaker__link{href: 'https://github.com/danmcclain', target: '_blank', 'aria-hidden' => 'true', 'data-icon' => 'G'}
              %span.hide Github
            %a.speaker__link{href: 'http://danmcclain.net', target: '_blank', 'aria-hidden' => 'true', 'data-icon' => 'W'}
